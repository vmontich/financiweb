
<h1>CATEGORIAS</h1>
<hr>
<a href="/admin/categorias/nova"><button class="btn btn-dark mt-2">Nova Categoria</button></a>
{{#each categorias}}
    <div class="card mt-2">
        <div class="card-body">
            <h4>{{nome}}</h4>
            <h5>{{descricao}}</h5>
            <small>{{dataCriacao}}</small>
            <br>
            <a href="/admin/categorias/editar/{{_id}}"><img src="/img/edit.png" alt="edit" class="mt-2"></a>
            <a href="/admin/categorias/excluir/{{_id}}"><img src="/img/delete.png" alt="delete" class="mt-2"></a>
        </div>
    </div>
{{else}}
<h6 class="mt-3">Não há categorias para serem exibidas</h6>
{{/each}}