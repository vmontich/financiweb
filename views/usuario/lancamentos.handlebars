<style>
    img {
        width: 1rem;
        margin: 3px 5px 5px 5px;
    }
</style>
{{#each erros}}
    <div class="alert alert-danger">{{texto}}</div>
{{else}}
{{/each}}
<h1>LANÇAMENTOS REGISTRADOS</h1>
<hr>
<a href="/usuario/lancamento/novo"><button class="btn btn-dark mt-2">Novo Lançamento</button></a>

{{!-- <form action="/usuario/lancamentos/incluir" method="get"> --}}

    <input type="hidden" name="mesAnterior" id="mesAnterior" value="{{dateAnterior}}">
    <input type="hidden" name="mesAtual" id="mesAtual">
    <input type="hidden" name="mesSeguinte" id="mesSeguinte" value="{{dateSeguinte}}">

    <div class="d-grid gap-2 d-md-flex justify-content-md-center">
        <div class="btn-group mt-4" role="group" aria-label="Basic outlined example">
            <a href="/usuario/lancamentos/{{dateAnterior}}"><button type="button" class="btn btn-outline-dark" id="btnMesAnterior"> <<< </button></a>
            <button type="button" class="btn btn-outline-dark" disabled><strong>{{periodo}}</strong></button>
            <a href="/usuario/lancamentos/{{dateSeguinte}}"><button type="button" class="btn btn-outline-dark" id="btnMesSeguinte"> >>> </button></a>
        </div>
    </div>

    <table class="table table-sm table-striped mt-3">
        <thead>
            <tr>
                <th scope="col">Data</th>
                <th scope="col">Descrição</th>
                <th scope="col">Categoria</th>
                <th scope="col">Valor</th>
                <th scope="col">Alterar</th>
                <th scope="col">Remover</th>
            </tr>
        </thead>
        <tbody>
            {{#each lancamentos}}
                <tr>
                    <td>{{dataLancamento}}</td>
                    <td>{{descricao}}</td>
                    <td>{{idCategoria.nome}}</td>
                    <td>{{valor}}</td>
                    <td><a href="/usuario/lancamentos/editar/{{_id}}"><img src="/img/edit.png" alt="edit"></a></td>
                    <td><a href="/usuario/lancamentos/excluir/{{_id}}"><img src="/img/delete.png" alt="delete"></a></td>
                </tr>
            {{else}}
                <tr>
                    <td colspan="6"></td>
                </tr>
            {{/each}}
                <tr>
                    <td colspan="3" align="right" ><strong>Saldo</strong></td>
                    <td>{{valorTotal}}</td>
                    <td colspan="2"></td>
                </tr>
        </tbody>
    </table>
{{!-- </form> --}}

<script>
    document.getElementById("btnMesAnterior").onclick = () => {
        document.getElementById("mesAtual").value = document.getElementById("mesAnterior").value
    }

    document.getElementById("btnMesSeguinte").onclick = () => {
        document.getElementById("mesAtual").value = document.getElementById("mesSeguinte").value
    }
</script>